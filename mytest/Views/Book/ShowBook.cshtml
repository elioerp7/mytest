@model IEnumerable<mytest.Models.Book>

    @{
        ViewData["Title"] = "ShowBook";
    }

    <br />
    <br />
    <div class="row" height="220">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5">
                    <div class="thumbnail hvr-curl-top-right">
                        <img src="@item.Image">

                    </div>
                </div>
                <div class="right">
                    <h5>
                        <font size="12">
                            @item.Title
                        </font>
                    </h5>
                </div>
                <div class="right">
                    <h6>
                        <font size="4">
                            <a href="ShowAuthor?field=@item.Author">@item.Author</a>
                            <br />$@item.Price
                        </font>
                    </h6>
                    <p><a href="#" class="btn btn-primary" role="button">Add To Cart</a></p>
                </div>
            }
        }
