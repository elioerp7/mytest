@model IEnumerable<mytest.Models.Book>


    @{
        ViewData["Title"] = "ShowBook";
    }
@{
    var comments = (IEnumerable<mytest.Models.BookComment>)ViewBag.Comments;
    var ratingSum = ViewBag.RatingSum;
    var ratingCount = ViewBag.RatingCount;
    var BookISBN = ViewBag.BookISBN;
    var UserId = ViewBag.UserId;
    decimal rating = 0;
    if (ratingCount > 0)
    {
        rating = (ratingSum / ratingCount);
    }
    var totalRating = decimal.Parse(rating.ToString());
}
    <body onload="SCRate();"></body>

<br />

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <div class="form-group">
                <br />
                @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                {
                    @Html.TextBox("search", null, new { @class = "form-control", @placeholder = "Book Name, Author, Genre or ISBN" })
                }
            </div>
        </div>

    </div>
</div>

<br />

    <div class="row" height="3">
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div class="col-lg-5 col-md-5 col-xs-5 col-sm-5">
                <div class="thumbnail hvr-curl-top-right">
                    <img src="@item.Image" style="height:450px; width:300px">

                </div>
            </div>
            <div class="right">
                <h5>
                    <font size="10">
                        @item.Title
                    </font>
                </h5>
            </div>
                <div>
                    <span class="starFadeN" id="sRate1"></span><span class="starFadeN" id="sRate2"></span><span class="starFadeN" id="sRate3"></span><span class="starFadeN" id="sRate4"></span><span class="starFadeN" id="sRate5"></span>
                    (@ratingCount Reviews)
                    <i style="padding-left:7em"><a href="ShoppingCartRequest?field=@item.Title" class="btn btn-primary" role="button">Add To Cart</a></i>

                </div>

                <div class="right">
                    <h6>
                        <font size="4">
                            by <a href="ShowAuthor?field=@item.Author">@item.Author</a></font>
                            <font size="2">
                            <br/>Release Date: @Convert.ToDateTime(item.ReleaseDate).ToString("MMMM dd, yyyy")
                            <br />$@item.Price
                        </font>
                    </h6>
                </div>
                <div>
                    @item.Description
                </div>
        }
    }
    </div>



    @foreach (var c in comments)
    {
        <hr />
        <div class="row">
            <div class="col-md-3">
                
                <br />
                @for (var i = 1; i <= c.Rating; i++)
                {
                    <span class="starGlowN"></span>
                }
                @for (var i = (c.Rating + 1); i <= 5; i++)
                {
                    <span class="starFadeN"></span>
                }
            </div>

        </div>
        <div>
            @if (@c.UserId == null)
             {
             <div>
                    <b>By Anonymous</b>
             </div>
             }
             else
             { 
            <div><b>By @c.UserId</b></div>
             }
            <i>on @String.Format("{0:F}", @c.ThisDateTime)</i>
            
         </div>
        <div class="col-md-9">
            @Html.Raw(c.Comments.Replace("\n", "<br />"))


        </div>
    }
    <hr />
    <br />
    <br />
    <br />
    <br />
    <div >
        @Html.Partial("CommentBox")
    </div>

<script>
    function SCRate() {
        for (var i = 1; i <= @totalRating; i++) {
            $("#sRate" + i).attr('class', 'starGlowN');
        }
    }
    $(function(){
        SCRate();
    });
</script>

