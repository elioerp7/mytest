@model AccountInformationViewModel
@{
    ViewData["Title"] = "Add New Credit Card:";



}

<h2>@ViewData["Title"].</h2>



<form asp-controller="Manage" asp-action="AddCreditCard" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">




    <h4>Add New Credit Card:.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewCreditCard" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewCreditCard" class="form-control" />
            <span asp-validation-for="NewCreditCard" class="text-danger"></span>
        </div>
    </div>



    <h4>Add the Billing Address:.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewBilltoAdd" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewBilltoAdd" class="form-control" />
            <span asp-validation-for="NewBilltoAdd" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewBilltoCity" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewBilltoCity" class="form-control" />
            <span asp-validation-for="NewBilltoCity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewBilltoState" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewBilltoState" class="form-control" />
            <span asp-validation-for="NewBilltoState" class="text-danger"></span>
        </div>
    </div>


        <div class="form-group">
            <label asp-for="NewBilltoZip" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewBilltoZip" class="form-control" />
                <span asp-validation-for="NewBilltoZip" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Update</button>

            </div>
        </div>


</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}