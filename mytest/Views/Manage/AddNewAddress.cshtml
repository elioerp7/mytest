@model AccountInformationViewModel
@{
    ViewData["Title"] = "Add New Shipping Address:";



}

<h2>@ViewData["Title"].</h2>



<form asp-controller="Manage" asp-action="AddNewAddress" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">




    <h4>Add New Shipping Addresss:.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewShiptoAdd" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewShiptoAdd" class="form-control" />
            <span asp-validation-for="NewShiptoAdd" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewShiptoCity" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewShiptoCity" class="form-control" />
            <span asp-validation-for="NewShiptoCity" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="NewShiptoState" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewShiptoState" class="form-control" />
            <span asp-validation-for="NewShiptoState" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <label asp-for="NewFirstName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewFirstName" class="form-control" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Add</button>

        </div>
    </div>


</form>


    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
